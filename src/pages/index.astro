---
import Accessories from "../components/Accessories.astro";
import HeroSection from "../components/HeroSection.astro";
import HoverOverlay from "../components/HoverOverlay.astro";
import Header from "../components/Header.astro";
import ModelS from "../components/ModelS.astro";
import ModelThree from "../components/ModelThree.astro";
import ModelX from "../components/ModelX.astro";
import ModelY from "../components/ModelY.astro";
import PowerWall from "../components/PowerWall.astro";
import SideBar from "../components/SideBar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla">
	<Header />

	<SideBar />

	<main class="snap-y snap-mandatory w-screen h-screen overflow-x-hidden overflow-y-scroll">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ModelThree />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<PowerWall />
		</div>
		<div class="snap-center">
			<Accessories />
		</div>
	</main>

	<HoverOverlay />
</Layout>
